{
  "name": "adamdrago.com",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "rm -rf .next && next dev",
    "build": "rm -rf .next && next build && npm run build-resume-txt && npm run build-resume-md && npm run build-resume-pdf",
    "start": "next start",
    "lint": "eslint --max-warnings 0 .",
    "lint:fix": "eslint --fix .",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "build-resume-pdf": "node ./scripts/buildResumePdf.ts",
    "build-resume-txt": "node ./scripts/buildResumeTxt.ts",
    "build-resume-md": "node ./scripts/buildResumeMd.ts"
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.10",
    "classnames": "^2.5.1",
    "common-tags": "^1.8.2",
    "next": "16.1.3",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@next/eslint-plugin-next": "^16.1.3",
    "@sparticuz/chromium": "^143.0.4",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/typography": "^0.5.16",
    "@types/common-tags": "^1.8.1",
    "@types/node": "^24.3.0",
    "@types/react": "19.1.9",
    "@types/react-dom": "19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "eslint-config-next": "16.1.2",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "import-sort-style-atdrago": "^0.1.7",
    "postcss": "^8.4.21",
    "prettier": "3.6.2",
    "prettier-plugin-import-sort": "^0.0.7",
    "puppeteer-core": "^24.35.0",
    "tailwindcss": "^4.1.11",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.53.0"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx, .mdx, .cjs": {
      "style": "atdrago",
      "parser": "typescript"
    }
  }
