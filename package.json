{
  "name": "adamdrago.com",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "rm -rf .next && next dev",
    "build": "rm -rf .next && next build && npm run build-resume-pdf && npm run build-resume-txt",
    "start": "next start",
    "lint": "eslint --max-warnings 0 .",
    "lint:fix": "eslint --fix .",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "build-resume-pdf": "node ./scripts/buildResumePdf.ts",
    "build-resume-txt": "node ./scripts/buildResumeTxt.ts"
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.10",
    "@sparticuz/chromium": "^138.0.2",
    "classnames": "^2.5.1",
    "common-tags": "^1.8.2",
    "next": "15.4.6",
    "puppeteer-core": "^24.16.0",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "sharp": "^0.32.1"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@types/common-tags": "^1.8.1",
    "@types/node": "^24.2.1",
    "@types/react": "19.1.9",
    "@types/react-dom": "19.1.7",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "8.43.0",
    "eslint-config-next": "15.4.6",
    "eslint-config-prettier": "^8.8.0",
    "import-sort-style-atdrago": "^0.1.7",
    "postcss": "^8.4.21",
    "prettier": "3.6.2",
    "prettier-plugin-import-sort": "^0.0.7",
    "tailwindcss": "^4.1.11",
    "typescript": "5.9.2"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx, .mdx, .cjs": {
      "style": "atdrago",
      "parser": "typescript"
    }
  }
}
