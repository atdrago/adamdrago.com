{
  "name": "adamdrago.com",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "rm -rf .next && next dev",
    "build": "rm -rf .next && next build && npm run build-resume-pdf && npm run build-resume-txt",
    "start": "next start",
    "lint": "eslint --max-warnings 0 .",
    "lint:fix": "eslint --fix .",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "build-resume-pdf": "tsm ./scripts/buildResumePdf.mts",
    "build-resume-txt": "tsm ./scripts/buildResumeTxt.mts",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@sparticuz/chromium": "^108.0.1",
    "classnames": "^2.3.2",
    "common-tags": "^1.8.2",
    "next": "^13.4.7",
    "phosphor-react": "^1.4.1",
    "puppeteer-core": "^20.7.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.32.1"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@types/common-tags": "^1.8.1",
    "@types/node": "20.3.1",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "autoprefixer": "^10.4.14",
    "eslint": "8.43.0",
    "eslint-config-next": "^13.4.7",
    "eslint-config-prettier": "^8.8.0",
    "import-sort-style-atdrago": "^0.1.7",
    "patch-package": "^7.0.0",
    "postcss": "^8.4.21",
    "prettier": "2.8.8",
    "prettier-plugin-import-sort": "^0.0.7",
    "tailwindcss": "^3.3.2",
    "tsm": "^2.2.2",
    "typescript": "5.1.3"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx, .mdx, .mts": {
      "style": "atdrago",
      "parser": "typescript"
    }
  }
}
